citHeader("To cite package 'relex' in publications, use:")

desc <- packageDescription("relex")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", desc$Date) 
vers <- paste("R package version", desc$Version) 

citEntry(entry = "Article",
  author = personList(
    as.person("Lily Ting"),
    as.person("Mark J Cowley"),
    as.person("Seah Lay Hoon"),
    as.person("Michael Guilhuis"),
    as.person("Mark J Raftery"),
    as.person("Ricardo Cavicchioli")),
  title = "Normalization and Statistical Analysis of Quantitative Proteomics Data Generated by Metabolic Labeling",
  journal = "Molecular & Cellular Proteomics",
  year = "2009",
  volume = "8",
  pages = "2227-2242",
  textVersion = "L. Ting, M.J. Cowley, S.L. Hoon, M. Guilhaus, M.J. Raftery & R. Cavicchioli. 2009. Normalization and Statistical Analysis of Quantitative Proteomics Data Generated by Metabolic Labeling. Mol Cell Proteomics 8 (Oct. 2009), 2227-2242.",
  note = vers
)

citFooter("Given the amount of work involved in developing and maintaining an R package, please cite it accordingly.")
